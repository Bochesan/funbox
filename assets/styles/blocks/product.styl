.product-box
    width: 16em;
    margin: 0 2em 1.5em;

    +below(1280px)
        margin: 0 1em 1.5em;

    &:first-child
        margin-left: 0;

        +below(1280px)
            margin: 0 1em 1.5em;

    &:last-child
        margin-right: 0;

        +below(1280px)
            margin: 0 1em 1.5em;

    &.selected

        .product-box

            &__container
                background: linear-gradient(135deg, transparent 35px, c-selected 35px);

                &:hover
                    background: linear-gradient(135deg, transparent 35px, lighten(c-selected, 10%) 35px);

                    & .product-box__size
                        background: lighten(c-selected, 10%);

            &__size
                background: c-selected;

            &__title--color
                color: c-selected;

    &.disabled

        .product-box

            &__container
                cursor: default;
                background: linear-gradient(135deg, transparent 35px, c-disabled 35px);

                &:hover

                    & .product-box__size
                        background: c-disabled;

            &__size
                background: c-disabled;

            &__image
            &__title
            &__name
            &__composition
            &__count
            &__gift
                opacity: 0.5;
                color: c-disabled;

            &__footnote
                color: c-footnote-dis;


    &__container
        cursor: pointer;
        background: linear-gradient(135deg, transparent 35px, c-default 35px);
        margin-bottom: 0.75em;
        border-radius: 1em;
        position: relative;
        padding: 0.2em;
        transition: border 0.3s;

        &:hover
            background: linear-gradient(135deg, transparent 35px, lighten(c-default, 10%) 35px);

            & .product-box__size
                background: lighten(c-default, 10%);

    &__container-inner
        background: linear-gradient(135deg, transparent 35px, white 35px);
        height: 24em;
        border-radius: 1em;
        position: relative;
        overflow: hidden;
        padding: 1.25em 1.25em 0.5em 2.5em;

    &__image
        position: absolute;
        bottom: 0;
        left: 0;

    &__image--pos
        left: -1.3em;
        bottom: -4.5em;

    &__info
        position: relative;
        z-index: 10;

    &__title
        font-family: ff-T;
        font-size: 0.8em;
        color: c-title;
        margin-bottom: 0.75em;

    &__name
        font-family: ff-TB;
        font-size: 2.4em;
        line-height: normal;
        font-weight: bold;
        color: black;

    &__composition
        font-family: ff-TB;
        font-size: 1.2em;
        line-height: normal;
        font-weight: bold;
        color: black;
        margin-bottom: 0.5em;

    &__count
    &__gift
        font-family: ff-T;
        font-size: 0.6em;
        color: c-title;

    &__count-num
    &__gift-num
        font-family: ff-TB;

    &__size
        font-family: ff-T;
        font-size: 1.05em;
        color: white;
        border-radius: 50%;
        background: c-default;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 4em;
        height: @width;
        position: absolute;
        bottom: 0.75em;
        right: 0.75em;
        z-index: 20;
        overflow: hidden;
        transition: background 0.3s;

    &__size-num
        font-size: 2.1em;
        line-height: 1em;

    &__footnote
        font-family: ff-T;
        font-size: 0.65em;
        color: white;
        text-align: center;

    &__footnote-button
        cursor: pointer;
        font-family: ff-TB;
        font-size: 1.05em;
        color: c-default;
        text-decoration: underline;
        text-decoration-style: dashed;

        &:hover
            text-decoration: none;
