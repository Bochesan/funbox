*
    box-sizing: border-box;

a
    outline: none;
    text-decoration: none;

html
body
    height: 100%;

body
    font-family: ff-default;
    font-size: fs-default;

.wrapper
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 100%;
    width: 100%;
    padding: 4%;
    background: url('/media/images/back.jpg') left top repeat;

    &:after
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        background: linear-gradient(to top,rgba(0,0,0,.4) 0%,rgba(0,0,0,0) 50%,rgba(0,0,0,.4) 90%)
